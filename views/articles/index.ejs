<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <h1 class="mb-4 mt-4">Your Blog</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article => { %>
            <div class="card my-4 p-3">
                <div class="card-body">

                    <h4 class="card-title"><%= article.title %></h4>
                    <h6 class="card-title text-muted">Author: <%= article.author %></h6>

                    <div class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString() %></div>

                    <div class="card-text mb-2"><%= article.description %></div>

                    <div class="mb-3 d-flex gap-2">
                        <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>

                        <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
<!-- 
                        <form action="/articles/<%= article.slug %>" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form> -->
                    <form class="delete-form" data-id="<%= article.id %>" action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    
                </div>
                    
                </div>
            </div>
        <% }); %>   

    </div>

    <script>
 document.querySelectorAll('.delete-form').forEach(form => {
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!confirm('Delete this article?')) return;
    const res = await fetch(form.action, { method: 'POST' });
    if (res.ok) {
      form.closest('.card').remove();
    } else {
      alert('Delete failed');
    }
  });
});
</script>
    
</body>
</html>